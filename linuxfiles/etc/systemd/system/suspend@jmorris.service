[Unit]
Description=Mute on Sleep
Before=sleep.target

[Service]
User=jmorris
Type=simple
ExecStartPre=/usr/bin/sudo -u jmorris env XDG_RUNTIME_DIR=/run/user/1000 /usr/bin/pactl set-sink-volume 1 0%
ExecStart=/usr/bin/sudo -u jmorris env XDG_RUNTIME_DIR=/run/user/1000 /usr/bin/pactl set-sink-mute 1 true

[Install]
WantedBy=sleep.target
